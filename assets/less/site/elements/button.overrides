.ui.button {
  &.search {
    background-color: @primaryColor;

    &:hover {
      background-color: @mainColors9;
    }
  }

  &.bordered {
    border: @borderWidth solid @borderColor;
    color: @greys6;
  }

  &.labeled.icon > .icon {
    width: 2.5em;
  }

  &.icon {
    padding: @verticalPadding @horizontalPadding;

    > .icon:not(:last-child) {
      margin-right: 0.5em !important;
    }
  }
}
